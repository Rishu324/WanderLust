<%layout("/layouts/boilerplate.ejs") -%>

<body>
    <h3>Listing detalis</h3>
    <div class="row">
        <div class="col-8 offset-3">
            <div class="card col-6">
                <img src="<%= one.image.url %>" class="show-image card-img-top" alt="Listing image"/>
                <div class="card-body">
                  <p class="card-text"><%=one.title%></p>
                </div>
            </div>
        </div>
    </div>
   
    <ul class="col-8 offset-3">
        <li><%=one.title%></li>
        <li><%=one.description%></li>
        <li>&#8377;<%=one.price.toLocaleString("en-in")%></li>
        <li><%=one.location%></li>
        <li><%=one.country%></li>

    </ul>
    <br>
    <a  class="col-8 offset-3" href="/listings/<%=one._id%>/edit"> Edit</a><br><br>
    <form method="post" action="/listings/<%= one._id %>?_method=DELETE">
        <button  class="col-8 offset-2">
            Delete
        </button>
    </form>
</body>
